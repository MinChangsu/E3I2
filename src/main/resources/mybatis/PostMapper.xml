<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ppiyong.e312.admin.mapper.MemberMapper">


    <select id="selectListCount"
            parameterType="com.ppiyong.e312.admin.model"
            resultType="long">

        select count(*)
        from member
        where 1 = 1

        <if test="searchType != null and searchValue != null">
            <choose>
                <when test="searchType == 'userId'">
                    and user_id like concat('%', #{searchValue}, '%')
                </when>
                <when test="searchType == 'userName'">
                    and user_name like concat('%', #{searchValue}, '%')
                </when>
                <when test="searchType == 'role'">
                    and phone like concat('%', #{searchValue}, '%')
                </when>
                <otherwise>
                    and(
                    user_id like concat('%', #{searchValue}, '%')
                    or
                    user_name like concat('%', #{searchValue}, '%')
                    or
                    phone like concat('%', #{searchValue}, '%')
                    )
                </otherwise>
            </choose>
        </if>

    </select>

        <!--   Mapper의 함수 (id로 맵핑시켜준 상태)    -->
    <select id="selectList"
            parameterType="com.ppiyong.e312.admin.model.MemberParam"
            resultType="com.ppiyong.e312.member.entity.User">

        select *
        from member
        where 1 = 1

            <if test="searchType != null and searchValue != null">
                <choose>
                    <when test="searchType == 'userId'">
                        and user_id like concat('%', #{searchValue}, '%')
                    </when>
                    <when test="searchType == 'userName'">
                        and user_name like concat('%', #{searchValue}, '%')
                    </when>
                    <when test="searchType == 'role'">
                        and phone like concat('%', #{searchValue}, '%')
                    </when>
                    <otherwise>
                        and(
                            user_id like concat('%', #{searchValue}, '%')
                            or
                            user_name like concat('%', #{searchValue}, '%')
                            or
                            phone like concat('%', #{searchValue}, '%')
                        )
                    </otherwise>
                </choose>
            </if>

        <!-- 데이터불러오는 갯수의 제한 -->
        limit #{pageStart}, #{pageEnd}




    </select>
</mapper>